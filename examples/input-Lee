LIGHT 0 -50 1 # AXIS VALUE EMIT DIRECTION
# MAKE SURE NO HOLES ARE CUT BY THE LIGHT SCREEN
CAMERA 0 50 -1 # AXIS VALUE LOOK-AT DIRECTION
OBJECTS
	BEGIN
	CUBE 
		0 0 0 #CENTER COORDINATE
		100 100 80 #LENGTH, WIDTH, HEIGHT
		ENTITY # ENTITY OR HOLE
		0 0 # SPECULARITY & TRANSPARENCY
		PERIODIC PERIODIC REFLECT # PERIODIC CONDITION IN X&Y
	CUBE 
		0 0 0 #CENTER COORDINATE
		60 60 80 #LENGTH, WIDTH, HEIGHT
		HOLE # ENTITY OR HOLE
		0 0 # SPECULARITY & TRANSPARENCY
		REFLECT REFLECT REFLECT # NO PERIODIC CONTITION
	END
MFPFILE Si/M_K-T300-s0.0-sum.dat
MFPSEG 300
NPHONON 10000 # NUMBER OF PHONONS
TOLERANCE 1E-10
CAMERATOMFP 10 #IF CAMERADISTANCE / MFP IS SMALLER THAN THIS VALUE, INCREASE THE CAMERA DISTANCE
