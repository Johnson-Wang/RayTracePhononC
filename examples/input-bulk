LIGHT 0 -50 1 # AXIS VALUE EMIT DIRECTION
# MAKE SURE NO HOLES ARE CUT BY THE LIGHT SCREEN
CAMERA 0 50 -1 # AXIS VALUE LOOK-AT DIRECTION
OBJECTS
	BEGIN
	CUBE 
		0 0 0 #CENTER COORDINATE
		100 100 100 #LENGTH, WIDTH, HEIGHT
		ENTITY # ENTITY OR HOLE
		0 0 # SPECULARITY & TRANSPARENCY
		PERIODIC REFLECT REFLECT # PERIODIC CONDITION IN X&Y
	END
MFP 100000000
NPHONON 100000 # NUMBER OF PHONONS
TOLERANCE 1E-10
RATIO 1 #IF CAMERADISTANCE / MFP IS SMALLER THAN THIS VALUE, INCREASE THE CAMERA DISTANCE
MAXCAMERA 10000
