LIGHT 0 -250 1 # AXIS VALUE EMIT DIRECTION
# MAKE SURE NO HOLES ARE CUT BY THE LIGHT SCREEN
CAMERA 0 250 -1 # AXIS VALUE LOOK-AT DIRECTION
OBJECTS
	BEGIN
	CUBE 
		0 0 0 #CENTER COORDINATE
		500 100 90 #LENGTH, WIDTH, HEIGHT
		ENTITY # ENTITY OR HOLE
		0 0 # SPECULARITY & TRANSPARENCY
		PERIODIC PERIODIC REFLECT # PERIODIC CONDITION IN X&Y
	CUBE 
		0 0 0 #CENTER COORDINATE
		470 70 90 #LENGTH, WIDTH, HEIGHT
		HOLE # ENTITY OR HOLE
		0 0 # SPECULARITY & TRANSPARENCY
		REFLECT REFLECT REFLECT # NO PERIODIC CONTITION
	END
MFP 1000000
NPHONON 1000000 # NUMBER OF PHONONS
TOLERANCE 1E-10
CAMERARATIO 1 #IF CAMERADISTANCE / MFP IS SMALLER THAN THIS VALUE, INCREASE THE CAMERA DISTANCE
CAMERAMAX 2000
