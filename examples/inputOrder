LIGHT 0 -600 1 # AXIS VALUE EMIT DIRECTION
# MAKE SURE NO HOLES ARE CUT BY THE LIGHT SCREEN
CAMERA 0 600 -1 # AXIS VALUE LOOK-AT DIRECTION
OBJECTS
        BEGIN
        CUBE
                0 0 0 #CENTER COORDINATE
                1200 600 150 #LENGTH, WIDTH, HEIGHT
                ENTITY # ENTITY OR HOLE
                0 0 # SPECULARITY & TRANSPARENCY
                PERIODIC PERIODIC REFLECT # PERIODIC CONDITION IN X&Y
        CUBE
                -300 150 0 #CENTER COORDINATE
                160 160 150 #LENGTH, WIDTH, HEIGHT
                HOLE # ENTITY OR HOLE
                0 0 # SPECULARITY & TRANSPARENCY
                REFLECT REFLECT REFLECT # NO PERIODIC CONTITION
        CUBE
                300 150 0 #CENTER COORDINATE
                160 160 150 #LENGTH, WIDTH, HEIGHT
                HOLE # ENTITY OR HOLE
                0 0 # SPECULARITY & TRANSPARENCY
                REFLECT REFLECT REFLECT # NO PERIODIC CONTITION
        END
MFPFILE Si/M_K-T100-s0.0-sum.dat
MFPSEG 300
NPHONON 10000 # NUMBER OF PHONONS
TOLERANCE 1E-10
CAMERARATIO 2 #IF CAMERADISTANCE / MFP IS SMALLER THAN THIS VALUE, INCREASE THE CAMERA DISTANCE
CAMERAMAX 20000
